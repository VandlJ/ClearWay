version: '3'

services:
  frontend:
    image: "{{ frontend_image | default(docker_username + '/clearway-frontend:latest') }}"
    container_name: clearway-frontend
    restart: unless-stopped
    networks:
      - app-network
    depends_on:
      - backend

  backend:
    image: "{{ backend_image | default(docker_username + '/clearway-backend:latest') }}"
    container_name: clearway-backend
    restart: unless-stopped
    volumes:
      - "./data:/app/data"
    networks:
      - app-network

  nginx:
    image: "{{ nginx_image | default(docker_username + '/clearway-nginx:latest') }}"
    container_name: clearway-nginx
    restart: unless-stopped
    ports:
      - "80:80"
      - "443:443"
    depends_on:
      - frontend
      - backend
    networks:
      - app-network

networks:
  app-network:
    driver: bridge